<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.leapa.autotask.MainActivity">

    <Spinner
        android:id="@+id/AppList"


        android:layout_width="wrap_content"
        android:layout_height="30dp"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_marginStart="32dp"
        android:layout_marginTop="13dp"
        android:background="@android:color/holo_blue_bright"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="41dp" />
    <Spinner
        android:id="@+id/CondList"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/AppList"
        android:layout_alignStart="@+id/text"
        android:layout_alignTop="@+id/AppList"
        android:background="@android:color/holo_blue_bright"
        tools:layout_editor_absoluteX="228dp"
        tools:layout_editor_absoluteY="41dp" />


    <Spinner
        android:id="@+id/Onoff"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/textView"
        android:layout_alignTop="@+id/CondList"
        android:background="@android:color/holo_blue_bright"
        tools:layout_editor_absoluteX="400dp"
        tools:layout_editor_absoluteY="41dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OPEN"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/AppList" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WHEN"
        tools:layout_editor_absoluteX="228dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />



    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IS"
        android:layout_marginEnd="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/Conditioncreation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Condition Creation"
        android:layout_marginTop="73dp"
        android:layout_below="@+id/AppList"
        android:layout_alignStart="@+id/AppList" />

</RelativeLayout>

